#!/bin/sh

main() {
  case $(autorandr | grep detected | awk '{print $1}') in
    "docked")
      echo docked
      bspc monitor eDP-1 --remove > /dev/null
      bspc monitor DVI-I-2-2 -d 1
      bspc monitor DVI-I-1-1 -d 2 3 4 5 6 7 8 9 0
      ;;
    "mobile")
      echo mobile
      bspc monitor eDP-1 -d 1 2 3 4 5 6 7 8 9 0
      ;;
    "work")
      echo work
      bspc monitor eDP-1 --remove > /dev/null
      bspc monitor DP-1 -d 1 2 3 4 5 6 7 8 9 0
      ;;
    *)
      echo "Monitors situation unidentified"
      exit 1
      ;;
  esac
}

main

label-connected = %essid:0:3%
label-connected-background = ${colors.transparent}
label-connected-padding-right = 1

format-disconnected-prefix = 
format-disconnected-prefix-foreground = ${colors.accent}
format-disconnected-prefix-background = ${colors.transparent}
format-disconnected-prefix-padding = 0

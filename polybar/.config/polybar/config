[colors]
transparent = #00000000
background = ${xrdb:background}
background-alt = ${xrdb:color8}
foreground = ${xrdb:background}
foreground-alt = ${xrdb:color8}
accent = ${xrdb:background}
alert = ${xrdb:color1}

[bar/base]
dpi = 192
height = 48 
offset-y = 0
radius = 0
background = ${colors.transparent}
foreground = ${colors.foreground}
font-0 = Noto Sans Mono:style=Regular:size=11;5
font-1 = Font Awesome 5 Free Regular:style=Regular:size=11;5
font-2 = Font Awesome 5 Free Solid:style=Solid:size=11;5
font-3 = Font Awesome 5 Brands Regular:style=Regular:size=11;5

cursor-click = pointer
wm-restack = bspwm
override-redirect = true

[bar/main]
inherit = bar/base

fixed-center = true
width = 100%
line-size = 12
padding = 1
module-margin-left = 0
module-margin-right = 0
dim-value = 1.0
enable-ipc = true
cursor-click = pointer
cursor-scroll =

modules-left = mpd 
modules-center = bspwm
modules-right = timetracker vpn bluetooth temperature cpu memory wlan pulseaudio battery date

[module/base]
format-prefix-background = ${colors.transparent}
format-prefix-foreground = ${colors.accent}
format-prefix-padding = 0
format-prefix-padding-left = 0
label-background = ${colors.transparent}
label-padding-right = 1

[module/mpd]
inherit = module/base
type = internal/mpd
format-online = <label-song> <label-time>
label-song = %artist:0:15:...%/%album:0:15:...%/%title:0:15:...%
label-time = %elapsed%/%total%

[module/bbb]
inherit = module/base
type = custom/script
exec = node ~/Projects/bbb-uol-votos/index.js 2>/dev/null
exec-if = case "$(date +%a)" in sáb|dom) exit -1;; esac
format-prefix =
interval = 1800

[module/timetracker]
inherit = module/base
type = custom/script
exec = time-tracker 2>/dev/null
exec-if = case "$(date +%a)" in sáb|dom) exit -1;; esac
click-left = punch-time | notify-pipe
click-right  = ~/Projects/ppp/bin/run pontos | rofi -dmenu -p "Pontos"
interval = 60

[module/redshift]
inherit = module/base
type = custom/script
exec = redshift -p 2>/dev/null | sed '3!d' | awk '{print $3}'
format-prefix = 
interval = 5

[module/cpu-hungry]
type = custom/script
exec = cpu-hungry
interval = 1
format-prefix = " "
format-prefix-foreground = ${colors.foreground-alt}

[module/corona]
type = custom/script
exec = corona
interval = 60
format-prefix = " "
format-prefix-foreground = ${colors.foreground-alt}

[module/keyboard]

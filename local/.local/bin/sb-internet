#!/bin/sh

# Show wifi ğŸ“¶ and percent strength or ğŸ“¡ if none.
# Show ğŸ”’ if a vpn connection is active

case $BUTTON in
	1) "$TERMINAL" -e nmtui; pkill -RTMIN+4 dwmblocks ;;
	3) notify-send "ğŸŒ Internet module" "\- Click to connect
âŒ: wifi disabled
ğŸ“¡: no wifi connection
ğŸ“¶: wifi connection with quality
ğŸ”’: vpn is active

Connected to $(nmcli -t -f NAME c show --active | head -n 1)
" ;;
	6) "$TERMINAL" -e "$EDITOR" "$0" ;;
esac

# Wifi
if [ "$(cat /sys/class/net/w*/operstate 2>/dev/null)" = 'up' ] ; then
	wifiicon="$(awk '/^\s*w/ { printf "ğŸ“¶%3d%", int($3 * 100 / 70) }' /proc/net/wireless)"
elif [ "$(cat /sys/class/net/w*/operstate 2>/dev/null)" = 'down' ] ; then
	[ "$(cat /sys/class/net/w*/flags 2>/dev/null)" = '0x1003' ] && wifiicon="ğŸ“¡ " || wifiicon="âŒ "
fi

printf "%s%s\n" "$wifiicon"

